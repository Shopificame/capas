<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Compras e IVA por Cobrar -->

        <record id="gt_tax_12_iva" model="account.tax.template">
            <field name="chart_template_id" ref="gt_coa_template"/>
            <field name="name">12% IVA Compras</field>
            <field name="description">IVA 12%</field>
            <field name="amount" eval="12"/>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">purchase</field>
            <field name="tax_group_id" ref="tax_group_iva_12"/>
            <field name="price_include" eval="True"/>
            <field name="invoice_repartition_line_ids" eval="[(5,0,0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('1280'),
                }),
            ]"/>
            <field name="refund_repartition_line_ids" eval="[(5, 0, 0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('1280'),
                }),
            ]"/>
        </record>

        <!-- Ventas e IVA por Pagar -->

        <record id="gt_tax_12_iva_ret" model="account.tax.template">
            <field name="chart_template_id" ref="gt_coa_template"/>
            <field name="name">12% IVA Ventas</field>
            <field name="description">IVA 12%</field>
            <field name="amount" eval="12"/>
            <field name="amount_type">percent</field>
            <field name="type_tax_use">sale</field>
            <field name="tax_group_id" ref="tax_group_iva_ret_12"/>
            <field name="price_include" eval="True"/>
            <field name="invoice_repartition_line_ids" eval="[(5,0,0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('2280'),
                }),
            ]"/>
            <field name="refund_repartition_line_ids" eval="[(5, 0, 0),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'base',
                }),
                (0,0, {
                    'factor_percent': 100,
                    'repartition_type': 'tax',
                    'account_id': ref('2280'),
                }),
            ]"/>
        </record>

    </data>
</odoo>